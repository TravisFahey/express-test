<% layout('layout') %>

<div class="row justify-content-center">
    <div class="col-md-12">
        <div class="text-center mt-3">
            <h1><%= title %></h1>
            <p>Welcome to <%= title %>!</p>
        </div>
    </div>
    <div class="col-md-8">
        <hr />
    </div>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
      <h2>Latest Blog Posts</h2>
  
      <% if (posts && posts.length === 0) { %>
        <p>No blog posts yet.</p>
      <% } else if (posts) { %>
        <% posts.forEach(post => { %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= post.content %></p>
              <p class="card-text"><small class="text-muted">By <%= post.author %> on <%= post.createdAt.toLocaleDateString() %></small></p>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
</div>

<!-- New Blog Post Form -->
<div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <h3>Create a New Blog Post</h3>
      <form id="blog-form">
        <div class="mb-3">
          <input type="text" class="form-control" name="title" placeholder="Title" required />
        </div>
        <div class="mb-3">
          <textarea class="form-control" name="content" placeholder="Content" required></textarea>
        </div>
        <div class="mb-3">
          <input type="text" class="form-control" name="author" placeholder="Author" />
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
      <div id="form-status" class="mt-3"></div>
    </div>
</div>

<script>
    const form = document.getElementById('blog-form');
    const statusDiv = document.getElementById('form-status');
  
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
  
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());
  
      try {
        const response = await fetch('/blog', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
  
        if (!response.ok) throw new Error('Submission failed');
  
        // âœ… On success, reload the page to fetch updated posts
        window.location.reload();
      } catch (err) {
        statusDiv.innerHTML = `<div class="alert alert-danger">Something went wrong. Please try again.</div>`;
      }
    });
</script>
  
  


